@page "/recherche_joueur_cla"
@page "/recherche_joueur_cla/{licence}"
@using Microsoft.Extensions.Localization
@using global::We.Ping.Smart.Localization
@inherits SmartPingComponentBase<IGetJoueurClassementQuery>



<p>@L["JoueurClassementSearchTitle"]</p>
<Field>
    <FieldLabel>Licence</FieldLabel>
    <TextEdit Placeholder="Licence" @bind-Text="Query.Licence" Disabled="IsLoading"></TextEdit>
</Field>


<Button Class="mb-4" Color="Color.Success" Clicked="async( e)=>await SendRequest()" Loading="@IsLoading">
    <LoadingTemplate>Recherche en cours</LoadingTemplate>
    <ChildContent>Rechercher</ChildContent>
</Button>
<br />

 <SmartApiUrlButton ExternalApiUrl="@ExternalApiUrl">Joueur Classement</SmartApiUrlButton>
 @if(Joueur is not null){
 <ul>

     
        <li>
            @Joueur.Club<br />
            @Joueur.Nom @Joueur.Prenom<br />
            Licence: @Joueur.Licence<br />
            Clt: @Joueur.Classement<br />
            Points Mensuels: @Joueur.PointsMensuel<br />
            Points Début de saison: @Joueur.PointDebutSaison<br />

        </li>
    
</ul>
 }