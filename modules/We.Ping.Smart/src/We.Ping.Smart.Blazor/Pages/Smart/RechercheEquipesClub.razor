@page "/recherche_equipes/"
@page "/recherche_equipes/{numero}"
@inherits SmartPingComponentBase<IBrowseEquipePourClubQuery>

<Field>
    <FieldLabel>Numero</FieldLabel>
    <TextEdit Placeholder="Numero" @bind-Text="Query.Numero" Disabled="IsLoading"></TextEdit>
</Field>
<Button Class="mb-4" Color="Color.Success" Clicked="async( e)=>await SendRequest()" Loading="@IsLoading">
    <LoadingTemplate>
        Recherche en cours..
    </LoadingTemplate>
    <ChildContent>
        Rechercher
    </ChildContent>
</Button>
<br />

<Field>
    <TextEdit @bind-Text="ExternalApiUrl" Disabled></TextEdit>
    <Button Class="mb-3" Color="Color.Link" Clicked="NavigateToSmartPingApi" Disabled="@string.IsNullOrEmpty(ExternalApiUrl)">SmartPing Api</Button>
</Field>
    <ul>
@foreach (var equipe in Equipes.OrderBy(x=>x.Equipe))
{
    <li>
        @equipe.Equipe <br/>
        Phase: @equipe.Phase<br/>
        Epreuve: @equipe.Epreuve<br/>
        Organisme: @equipe.CodeOrganisme<br/>
        Code Epreuve: @equipe.CodeEpreuve<br/>
        Division: @equipe.Division<br>
        Poule: @equipe.Poule
        Lien: @equipe.LienEpreuve

    </li>

}
    </ul>

