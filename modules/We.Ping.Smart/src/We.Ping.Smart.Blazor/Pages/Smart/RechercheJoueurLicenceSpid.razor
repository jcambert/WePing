@page "/recherche_joueur_spid"
@page "/recherche_joueur_spid/{licence}"
@using Microsoft.Extensions.Localization
@using global::We.Ping.Smart.Localization
@inherits SmartPingComponentBase<IGetJoueurLicenceSpidQuery>



<p>@L["JoueurLicenceSpidSearchTitle"]</p>
<Field>
    <FieldLabel>Licence</FieldLabel>
    <TextEdit Placeholder="Licence" @bind-Text="Query.Licence" Disabled="IsLoading"></TextEdit>
</Field>


<Button Class="mb-4" Color="Color.Success" Clicked="async( e)=>await SendRequest()" Loading="@IsLoading">
    <LoadingTemplate>Recherche en cours</LoadingTemplate>
    <ChildContent>Rechercher</ChildContent>
</Button>
<br />

<SmartApiUrlButton ExternalApiUrl="@ExternalApiUrl">Joueur Licence Spid</SmartApiUrlButton>
@if (Joueur is not null)
{
    <ul>


        <li>
            @Joueur.Club<br />
            @Joueur.Nom @Joueur.Prenom<br />
            Licence: @Joueur.Licence<br />
            
            Points Mensuels: @Joueur.PointsMensuels<br />
            Points Début de saison: @Joueur.PointsDebutSaison<br />

        </li>

    </ul>
}